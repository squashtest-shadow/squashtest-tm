<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<bean id="squashtest.core.persistence.jdbc.DataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" value="${datasource.db.driverClassName}" />
		<property name="url" value="${datasource.db.url}" />
		<property name="username" value="${datasource.db.username}" />
		<property name="password" value="${datasource.db.password}" />
		<property name="validationQuery" value="${datasource.db.validationQuery}" />
		<property name="maxActive" value="${datasource.db.maxActive}" />
		<property name="initialSize" value="${datasource.db.initialSize}" />
	</bean>
</beans>