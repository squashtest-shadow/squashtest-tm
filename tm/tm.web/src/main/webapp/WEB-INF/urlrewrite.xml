<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 3.0//EN" "http://tuckey.org/res/dtds/urlrewrite3.0.dtd">
<urlrewrite default-match-type="wildcard">
	<rule>
		<from>/images/**</from>
		<to>/images/$1</to>
	</rule>
	<rule>
		<from>/**/nullpx</from>
		<to>/images/nullpx</to>
	</rule>
	<rule>
		<from>/nullpx</from>
		<to>/images/nullpx</to>
	</rule>
	<rule>
  <!-- below is a maven placeholder -->
		<from>/styles-@project.version@/**</from>
		<to>/styles/$1</to>
	</rule>
	<rule>
		<from>/scripts/**</from>
		<to>/scripts/$1</to>
	</rule>
	<rule>
		<from>/</from>
		<to>/app/</to>
	</rule>
	<rule>
		<from>/**</from>
		<to>/app/$1</to>
	</rule>
	<outbound-rule>
		<from>/app</from>
		<to>/</to>
	</outbound-rule>
	<outbound-rule>
		<from>/app/</from>
		<to>/</to>
	</outbound-rule>
	<outbound-rule>
		<from>/app/**</from>
		<to>/$1</to>
	</outbound-rule>
</urlrewrite>