<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	  	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
	">
	
	<!--  infrastructure to mock Spring DM -->
	<bean class="org.squashtest.it.infrastructure.AopSquashProxyUtil" />
	<bean class="org.squashtest.it.infrastructure.StubBeanPostProcessor" lazy-init="false" />

	<context:component-scan  base-package="org.squashtest.tm.service.internal" />
	<context:component-scan base-package="org.squashtest.tm.service.security" />

	<!--  stubs  -->
	<bean id="bugTrackersService" class="org.squashtest.csp.core.bugtracker.service.StubBugTrackerService" primary="true"/>
	<bean class="org.squashtest.tm.service.security.StubUserContextService" primary="true"/> 
	<bean class="org.squashtest.tm.service.security.StubPermissionEvaluationService" primary="true"/>
	<bean class="org.squashtest.tm.service.security.StubObjectIdentityService" primary="true"/>
	
	<!--  tm/ta beans -->
	<bean class="java.util.Properties" id="squashtest.tm.ta.defaults" primary="true" />

	
</beans>
