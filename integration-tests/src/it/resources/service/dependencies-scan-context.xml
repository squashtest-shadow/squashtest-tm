	<!--  stubs  -->
	
  <bean id="javax.validation.ValidatorFactory" class="org.squashtest.it.infrastructure.StubValidatorFactory" />	
  <bean id="bugTrackersService" class="org.squashtest.csp.core.bugtracker.service.StubBugTrackerService" primary="true"
    lazy-init="false" />
  <bean class="org.squashtest.tm.service.security.StubUserContextService" primary="true" lazy-init="false" />
  <bean class="org.squashtest.tm.service.security.StubPermissionEvaluationService" primary="true" lazy-init="false" />
  <bean class="org.squashtest.tm.service.security.StubObjectIdentityService" primary="true" lazy-init="false" />
  <bean class="org.squashtest.tm.service.security.StubPermissionEvaluator" primary="true" lazy-init="false" />
  <bean class="org.squashtest.tm.service.security.StubPermissionFactory" primary="true" lazy-init="false" />
