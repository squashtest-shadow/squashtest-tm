    <profile>
      <id>mysql</id>
      <properties>
        <dbunit-database.url>jdbc:mysql://localhost/squashtest_it</dbunit-database.url>
        <non-dbunit-database.url>jdbc:mysql://localhost/squashtest_it</non-dbunit-database.url>

