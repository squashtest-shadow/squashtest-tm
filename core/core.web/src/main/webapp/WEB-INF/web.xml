<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/jee/web-app_2_5.xsd" version="2.5">
	<!-- ====== SPRING FRONT CONTROLLER ====== -->
	<servlet>
		<!-- CoC will lookup ${servlet-name}-servlet.xml for MVC conf -->
		<servlet-name>squashtest.csp.core</servlet-name>
		<servlet-class>
			org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
		<init-param>
			<param-name>contextClass</param-name>
			<param-value>
				org.springframework.osgi.web.context.support.OsgiBundleXmlWebApplicationContext
			</param-value>
		</init-param>
		<description>
			Spring MVC front controller configured to use a
			Spring-DM-integrated application context
		</description>
	</servlet>

	<servlet-mapping>
		<servlet-name>squashtest.csp.core</servlet-name>
		<url-pattern>/app/*</url-pattern>
	</servlet-mapping>
	<!-- ====== /SPRING FRONT CONTROLLER ====== -->

<!--  ========================= encoding set to utf-8 =========================== -->
    <filter>
        <filter-name>encoding-filter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
        <!--  we force the encoding because we want the encoding to be set for both request and response -->
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>        

    </filter>

    <filter-mapping>
        <filter-name>encoding-filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
	<!-- ====== SPRING SECURITY ====== -->
	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>
			org.springframework.web.filter.DelegatingFilterProxy
		</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- ====== /SPRING SECURITY ====== -->

	<!-- ====== URL REWRITE ====== -->
	<!-- Enables clean URLs with JSP views e.g. /welcome instead of /app/welcome -->
	<!-- THIS FILTER BREAKS THE FILTER CHAIN ! EITHER PUT IT LAST OR ADD -->
	<!-- A DISPATCHER DIRECTIVE TO THE OTHER FILTERS -->
	<!-- For config, look at WEB-INF/urlrewrite.xml -->
	<filter>
		<filter-name>UrlRewriteFilter</filter-name>
		<filter-class>
			org.tuckey.web.filters.urlrewrite.UrlRewriteFilter
		</filter-class>
		<init-param>
			<param-name>logLevel</param-name>
			<param-value>${logger.urlRewriteFilter}</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>UrlRewriteFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- ====== /URL REWRITE ====== -->

	<!-- ====== BUG TRACKER CONTEXT PERSISTER ====== -->
	<filter>
		<filter-name>bugTrackerContextPersister</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>bugTrackerContextPersister</filter-name>
		<servlet-name>squashtest.csp.core</servlet-name>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>
	<!-- ====== /BUG TRACKER CONTEXT PERSISTER ====== -->

	<!-- ====== USER CONCURRENT REQUEST QUEUE ====== -->
	<filter>
		<filter-name>userConcurrentRequestLocker</filter-name>
		<filter-class>org.squashtest.csp.core.web.internal.filter.UserConcurrentRequestLockFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>userConcurrentRequestLocker</filter-name>
		<servlet-name>squashtest.csp.core</servlet-name>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>
	<!-- ====== /USER CONCURRENT REQUEST QUEUE ====== -->

	<!-- ====== SPRING BOOTSTRAPPER ====== -->
	<context-param>
		<param-name>contextClass</param-name>
		<param-value>
			org.springframework.osgi.web.context.support.OsgiBundleXmlWebApplicationContext
		</param-value>
		<description>
			This webapp uses a Spring-DM-integrated application
			context
		</description>
	</context-param>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/applicationContext-*.xml</param-value>
	</context-param>


	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
		<description>Spring application context bootstrapper</description>
	</listener>

	<listener>
		<listener-class>
			org.squashtest.csp.core.web.internal.servlet.DelegatingServletContextListenerMulticaster
		</listener-class>
	</listener>
	<!-- ====== /SPRING BOOTSTRAPPER ====== -->

	<listener>
		<listener-class>
			org.squashtest.csp.core.web.internal.servlet.HttpSessionLifecycleLogger
		</listener-class>
	</listener>

	<jsp-property-group>
		<!-- Scriptlets are forbidden because they enable bad practices -->
		<scripting-invalid>true</scripting-invalid>
	</jsp-property-group>
	


	<welcome-file-list>
		<welcome-file>/test-case-workspace</welcome-file>
	</welcome-file-list>

	<session-config>
		<session-timeout>60</session-timeout>
	</session-config>

	<!-- ================ Squash version variable ====================== -->

	<context-param>
		<param-name>squashTMVersion</param-name>
		<param-value>${project.version}</param-value>
	</context-param>
	
	<context-param>
		<param-name>stage</param-name>
		<param-value>${project.stage}</param-value><!--  ensure that the values are DEV or RELEASE -->
	</context-param>	
	 <!-- ================ Listner ====================== -->
	 <listener><listener-class>org.squashtest.csp.tm.web.internal.listner.HttpSessionListnerImpl</listener-class></listener>
</web-app>